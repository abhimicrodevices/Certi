{
  "build": {
    "devPath": "../src/pages",
    "distDir": "../src/pages",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "purchase",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true,
        "ask": true,
        "confirm": true
      },
      "http": {
        "all": true
      },
      "fs" : {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "scope": ["$APPDATA"]
      }
    },
    "windows": [
      {
        "title": "purchase",
        "width": 800,
        "height": 600,
        "url": "login.html"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
